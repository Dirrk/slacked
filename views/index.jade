extends layout

block content
  nav.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
    .container-fluid
      .navbar-header
        a.navbar-brand(href="/") Slacked

  .container-fluid
    .row
      .col-sm-3.col-md-2.sidebar
        h6 Channels
        ul#chanSideBar.nav.nav-sidebar
          for chan in channels
            li
              if chan.locationId == channel
                a.highlight(href="/channel/#{chan.locationId}") #{chan.name}
              else
                a(href="/channel/#{chan.locationId}") #{chan.name}
        br
        h6 Groups
        if (groups)
          ul#groupSideBar.nav.nav-sidebar
            for group in groups
              li
                if group.locationId == channel
                  a.highlight(href="/group/#{group.locationId}") #{group.name}
                else
                  a(href="/group/#{group.locationId}") #{group.name}


      .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
          .container-fluid.msgContainer
            for msg in messages
              .message
                p [#{msg.ts}] &lt#{msg.name}&gt #{msg.msg}
            if messages.length >= 100
              .message
                a(href="/channel/#{channel}?start=#{lastIndex}") Load next page