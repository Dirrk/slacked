doctype html
html(ng-app="ngLocationSlackedApp")
   head
      title="Slacked"
      link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css")
      link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css")
      link(rel='stylesheet', href='/stylesheets/chosen.min.css')
      link(rel='stylesheet', href='/stylesheets/jquery.datetimepicker.css')
      link(rel='stylesheet', href='/stylesheets/style.css')

      script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
      script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.6/angular.min.js")
      script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.6/angular-route.min.js")
      script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js")
      script(src="/javascripts/chosen.jquery.min.js")
      script(src="/javascripts/jquery.datetimepicker.js")
      script(src="/javascripts/location.js")


   body(ng-controller="ngMainController")
      nav.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
         .container-fluid
            .navbar-header
               a.navbar-brand(href="/#/") Slacked
            ul.nav.navbar-nav.navbar-right
               li
                  a(href="/#/search") Search
               li
                  a(href="/#/user") {{user.displayName}}

      .container-fluid
         .row
            .col-sm-3.col-md-2.sidebar(ng-controller="ngSidebarController")
               h6 Channels
               ul#chanSideBar.nav.nav-sidebar
                  li(ng-repeat="chan in channels")
                     a(href="#/history/channel/{{chan.locationId}}") {{chan.name}}
               br
               h6 Groups
               ul#groupSideBar.nav.nav-sidebar
                  li(ng-repeat="group in groups")
                     a(href="#/history/group/{{group.locationId}}") {{group.name}}

            .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
               .container-fluid(ng-view)
         #hiddenDiv(style="display: none;", data-user="{{user.userId}}")
            //
               .container-fluid(ng-controller="ngMessageViewer")
                  .msgContainer
                     .message(ng-repeat="msg in messages")
                        p [{{msg.ts}}] &lt{{msg.name}}&gt {{msg.msg}}